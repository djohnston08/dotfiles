#!/bin/sh

# Source common variables
source ~/projects/dotfiles/common/shell/.shellvars.common

# Source platform-specific variables
if [[ "$(uname -s)" == "Darwin" ]]; then
    source ~/projects/dotfiles/macos/shell/.shellvars.macos
elif [[ "$(uname -s)" == "Linux" ]]; then
    source ~/projects/dotfiles/linux/shell/.shellvars.linux
fi