#!/bin/sh

# Source common aliases
source ~/projects/dotfiles/common/shell/.shellaliases.common

# Source platform-specific aliases
if [[ "$(uname -s)" == "Darwin" ]]; then
    source ~/projects/dotfiles/macos/shell/.shellaliases.macos
elif [[ "$(uname -s)" == "Linux" ]]; then
    source ~/projects/dotfiles/linux/shell/.shellaliases.linux
fi