#!/bin/sh

# macOS-specific aliases

# Sail aliases (Laravel development)
alias sail='[ -f sail ] && bash sail || bash vendor/bin/sail'
alias arty='sail artisan'
alias sud='sail up -d'

# Tailscale alias (macOS app path)
alias tailscale="/Applications/Tailscale.app/Contents/MacOS/Tailscale"

# Docker aliases specific to macOS
alias run-golinks='docker run --rm -d -u root -e "TS_AUTHKEY=${TS_AUTHKEY}" -v /Users/djohnston/golink_data:/home/nonroot ghcr.io/tailscale/golink:main'